# VAP Dispatcher Container

FROM node:22-slim

# Install Docker CLI
RUN apt-get update && apt-get install -y \
    docker.io \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy package files
COPY package.json ./
RUN npm install

# Copy source
COPY src/ ./src/

# Expose ports
EXPOSE 18790 18791

# Start dispatcher
CMD ["node", "src/cli-v2.js", "start"]
